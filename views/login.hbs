<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login</title>
    <link rel="stylesheet" href="../assets/css/addProject.css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>

    <nav class="navbar navbar-expand-lg" style="background-color: whitesmoke">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/assets/images/logo.png" alt="logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link text-dark mx-2 active" aria-current="page" href="/">Home</a>
                    </li>
                    {{#if this.isLogin}}
                    <li class="nav-item">
                        <a class="nav-link mx-2" aria-current="page" href="/add-project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                <a class="nav-link mx-2 btn" aria-current="page" href="/register">Register</a>
                <a class="nav-link mx-2 btn mx-4" aria-current="page" href="/login">Login</a>

                <a href="/contact" class="btn bg-dark text-white px-3 ">Contact Me</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid d-flex justify-content-center align-items-center">
        <div class="container-form">
            <h2 style="font-weight: bold; font-size: 30px;" class="text-center mb-5">LOGIN TO YOUR ACCOUNT</h2>

            {{#if messages.danger}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Maaf...</strong> {{messages.danger}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}


            <form action="/login" method="post" class="container-form">
                {{!-- <div class="mb-3">
                    <label for="inputName" class="form-label text-bold">Name</label>
                    <input type="text" class="form-control" id="inputName" name="inputName"
                        aria-describedby="emailHelp">
                    <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
                </div> --}}

                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="inputEmail" name="inputEmail"
                        aria-describedby="emailHelp">
                    {{!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    --}}
                </div>


                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input type="password" class="form-control" id="inputPassword" name="inputPassword">
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="submit" class="btn bg-dark text-white px-5 rounded-pill mt-3">Submit</button>
                </div>

            </form>
        </div>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</body>

</html>